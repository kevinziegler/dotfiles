[user]
  name = Kevin Ziegler

[core]
  excludesfile = ~/.dotfiles/tools/git/gitignore_global
  editor = /usr/bin/vim
  pager = delta --dark 

[alias]
  vlog = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  st = status
  co = checkout
  ci = commit
  patch = !git --no-pager diff --no-color
  fp = push --force-with-lease
  f  = fetch
  fa = fetch --all

[http]
	sslVerify = false

[merge]
	conflictstyle = zdiff3

[github]
	user = kevinziegler

[color]
	ui = auto

[color "branch"]
	current = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[magithub]
	online = false

[magithub "status"]
	includeStatusHeader = false
	includePullRequestsSection = false
	includeIssuesSection = false

[pull]
	rebase = true

[hub]
  protocol = git

[include]
  path=~/.gitconfig.local

# Make diffs for org-files more usable by indicating the parent heading for the
# change
[diff "org"]
  xfuncname = "^(\\*+ +.*)$"
